    "version": "2.0.0",
    "tasks": [
        {
            "label": "Compile Project",
            "type": "shell",
            "command": "meson build --default-library=shared -Dbuild-tests=true && ninja -C build",
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Clean Build Environment",
            "type": "shell",
            "command": "sudo rm -r build",
            "problemMatcher": [],
            "presentation": {
                "focus": true
            }
        }
    ],

